package com.delorent.model;

import java.time.LocalDate;

public class ContratLocation {
    private Integer idContrat; // null tant que non persist√©
    private final int idLoueur;
    private final int idAgent;
    private final int idLouable;
    private final int idAssurance;
    private final LocalDate dateDebut;
    private final LocalDate dateFin;
    private final String lieuPrise;
    private final String lieuDepot;
    private final double prixFinal;
    private final ContractEtat etat;

    public ContratLocation(
            Integer idContrat,
            int idLoueur,
            int idAgent,
            int idLouable,
            int idAssurance,
            LocalDate dateDebut,
            LocalDate dateFin,
            String lieuPrise,
            String lieuDepot,
            double prixFinal,
            ContractEtat etat
    ) {
        this.idContrat = idContrat;
        this.idLoueur = idLoueur;
        this.idAgent = idAgent;
        this.idLouable = idLouable;
        this.idAssurance = idAssurance;
        this.dateDebut = dateDebut;
        this.dateFin = dateFin;
        this.lieuPrise = lieuPrise;
        this.lieuDepot = lieuDepot;
        this.prixFinal = prixFinal;
        this.etat = etat;
    }

    public Integer getIdContrat() { return idContrat; }
    public void setIdContrat(Integer idContrat) { this.idContrat = idContrat; }

    public int getIdLoueur() { return idLoueur; }
    public int getIdAgent() { return idAgent; }
    public int getIdLouable() { return idLouable; }
    public int getIdAssurance() { return idAssurance; }
    public LocalDate getDateDebut() { return dateDebut; }
    public LocalDate getDateFin() { return dateFin; }
    public String getLieuPrise() { return lieuPrise; }
    public String getLieuDepot() { return lieuDepot; }
    public double getPrixFinal() { return prixFinal; }
    public ContractEtat getEtat() { return etat; }
}